@model IEnumerable<RockyTwo.Models.Product>


 <div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Product list</h2>
		</div>
		<div class="col-6">
			<a  asp-action="UpSert" class="btn btn-primary">Create new Product</a>
		</div>
	</div>
	<br /> <br />

	@if (Model.Any())
	{
		<table class="table-bordered  table-striped" style="width100%">
			<thead>
				<tr>
					<th>Product name</th>

					<th>Price</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model)
				{
					<tr>
						<td width="50%">@obj.Name</td>
						<td width="30%">@obj.Price</td>
						<td class="text-center">
							<div class="w-75 btn-group" role="group">
								<a  asp-action="UpSert" asp-route-Id="@obj.Id" class="btn btn-primary" mx-2>
									Edit
		-						</a>
								<a  asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-Danger" mx-2>
									Delete
								</a>
							</div>
						</td>

					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<P>No product</P>
	}
</div>